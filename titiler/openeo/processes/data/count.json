    "categories": [
        "math",
        "reducer"
    ],
    "parameters": [
        {
            "name": "data",
            "description": "An array or data cube with temporal dimension.",
            "schema": {
                "type": [
                    "array",
                    "object"
                ]
            }
        },
        {
            "name": "condition",
            "description": "Optional condition for counting.",
            "schema": {
                "type": [
                    "boolean",
                    "null"
                ]
            },
            "optional": true,
            "default": null
        }
    ],
    "returns": {
        "description": "Count of valid pixels.",
        "schema": {
            "type": "number"
        }
    }
}
